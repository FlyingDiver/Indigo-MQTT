<?xml version="1.0"?>
<PluginConfig>
	<SupportURL>http://forums.indigodomo.com/viewforum.php?f=316</SupportURL>
	<Field id="logLevel" type="menu" defaultValue="20">
		<Label>Event Logging Level:</Label>
		<List>
			<Option value="5">Verbose Debugging Messages</Option>
			<Option value="10">Debugging Messages</Option>
			<Option value="20">Informational Messages</Option>
			<Option value="30">Warning Messages</Option>
			<Option value="40">Error Messages</Option>
			<Option value="50">Critical Errors Only</Option>
		</List>
	</Field>			
	<Field type="textfield" id="queueWarning" defaultValue="10">
		<Label>Queue size for log warning:</Label>
		<Description>(Only change if you get spikes of MQTT messages)</Description>
	</Field>
	<Field type="checkbox" id="showDebugInfo">
		<Label>Enable library debugging:</Label>
		<Description>(not recommended, requires plugin restart)</Description>
	</Field>
</PluginConfig>
